%div.well{'id'=>'registration'}
  %h1 Sign up
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    = f.input :username
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.submit "Sign up"

  = render :partial => "devise/shared/links"
